$( document ).ready(function() {

var lastChild = $(".news-article").last().addClass("last");

      $(function () {
        $(".lazy-trigger").on("click", function () {
          $("#news-blocks.col-8").find(".news-article:hidden:lt(5)").show();


          if (!$('.last').is(':hidden')) {
                $( ".lazy-trigger" ).hide();
            } else {

            }
          });


      });

});
 </script>