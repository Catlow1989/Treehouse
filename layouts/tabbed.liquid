          $( ".testing" ).toggle();
          $( ".contain-mob-btn" ).toggleClass("active-mob");
});




$(window).resize(function(e){
    updateMenu();
});

    function updateMenu(){

      if($(window).width() >= 690){

        // mobile view instructions
          $( ".testing" ).removeAttr('style');  
          $( ".show-menu" ).removeClass('active');
          $( ".mob-search-bar" ).removeAttr('style'); 
          $( ".search-props-mob" ).removeClass('open-search');
          $( ".contain-mob-btn" ).removeClass('active-mob');
          } else {

        // desktop view instructions

          }

      }

   }); 

});

</script>

